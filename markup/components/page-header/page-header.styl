.page-header
  margin-bottom 20px
  .row-bottom
    ul
      reset-list()
      
      display flex
      li
        flex-grow 1
        margin-right 1.9%
        &:last-child
          margin-right 0
        a
          font('Raleway', 20px, 500, #B35F49, true)
          
          position relative
          
          box-sizing border-box
          display block
          padding 13px 5px
          
          text-align center
          
          background-color #E8FDEB
          
          border-radius 50px
          
          transition 0.2s ease
          span
            font('Muller', 14px, 500, #B35F49, true)
            
            position absolute
            top -3px
            right -15px
            
            box-sizing border-box
            display block
            width 30px
            height 30px
            
            text-align center
            line-height 25px
            
            background-color #D0FDD6
            
            border 3px solid #ffffff
            border-radius 50%
            
            transition 0.2s ease
          &:hover
            color #ffffff
            
            background-color #16BD2D
            span
              color #ffffff
            
              background-color #16BD2D
  .row-top
    margin-bottom 20px
    padding 27px 0
    
    background-color #FEF6D2
    box-shadow: 0px 2px 5px 0px rgba(0,0,0,0.25);
    .container
      display flex
      align-items center
    .time
      position relative
      
      margin-left: 2.711%;
      p
        font('Muller', 18px, 400, #5D5D5D)
        
        position absolute
        right 0
        bottom -28px
        
        display flex
        flex-direction row-reverse
        span
          icon(20px, 20px, #16BD2D)
          
          margin-right 11px
      a
        font('Muller', 36px, 700, #F44545, true)
        
        display flex
        flex-direction row-reverse
        align-items center
        
        text-decoration none
        span
          icon(26px, 26px, #F44545)
          
          margin-right 8px
    .basket
      margin-left: 2.82%;
      a
        display flex
        align-items center
        
        text-decoration none
        .price
          display flex
          align-items center
          p
            font('Gotham Pro', 26px, 400, #009F16)
          span
            icon(11px, 19px, #009F16)
            
            margin-left 10px
        .round
          position relative
          
          width 60px
          height 60px
          margin-right 17px
          
          background-color #16BD2D
          
          border-radius 50%
          .count
            font('Muller', 18px, 400, #FFFFFF, true)
            
            position absolute
            top -6px
            right -11px
            
            box-sizing border-box
            width 30px
            height 30px
            
            text-align center
            line-height: 26px;
            
            background-color #16BD2D
            
            border 3px solid #FFF5ED
            border-radius 50%
          .icon
            center-absolute()
            icon(30px, 30px, #FFFFFF)
    .info
      reset-list()
      
      flex-grow 1
      display flex
      justify-content space-between
      align-items center
      width 30%
      li
        a
          display flex
          align-items center
          
          text-decoration none
          span
            icon(30px, 30px, #16BD2D)
            
            margin-right 10px
          p
            font('Raleway', 22px, 500, #5D5D5D)
        &:nth-child(1)
          a
            span
              icon(32px, 32px, #16BD2D)
        &:nth-child(2)
          a
            span
              icon(36px, 36px, #16BD2D)
        &:nth-child(3)
          a
            span
              bgs(30px, 30px)
              bgi('discount.svg')
    .logo
      display flex
      align-items center
      margin-right: 3.96%;
      .img
        width 60px
        margin-right 3px
      .text
        p
          &:nth-child(1)
            font('Muller', 36px, 700, #B35F49)
          &:nth-child(2)
            font('Muller', 24px, 700, #F9A12B)
            
            letter-spacing 6px
