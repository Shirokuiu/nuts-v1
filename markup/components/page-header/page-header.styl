  .page-header .row-top .logo .text p:nth-child(2)
    letter-spacing: 2px;
    font-size: 12px;
    line-height: 17px;
    
  .page-header .row-top .basket a .round
    width: 40px;
    height: 40px;
    
  .page-header .row-top .basket a .round .icon .icon
    width: 20px;
    height: 20px;
    
  .page-header .row-top .basket a .price p
    font-size: 15px;
    line-height: 19px;
    
  .page-header .row-top .basket a .price span
    width: 7px;
    height: 16px;
    
  .page-header .row-top .basket a .price span .icon
    width: 7px;
    height: 16px;
    
  .page-header .row-top .time a
    font-size: 16px;
    line-height: 20px;
    
  .page-header .row-top .time a span
    display: none;
    
