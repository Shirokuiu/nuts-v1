  .page-header .row-top .basket a .round
    width: 50px;
    height: 50px;
    margin-right: 10px;
    
  .page-header .row-top .basket a .round .count
    font-size: 13px;
    width: 25px;
    height: 25px;
    line-height: 22px;
    
  .page-header .row-top .basket a .price p
    font-size: 19px;
    line-height: 23px;
    
  .page-header .row-top .basket a .price span
    width: 9px;
    height: 18px;
    
  .page-header .row-top .basket a .price span .icon
    width: 9px;
    height: 18px;
    
  .page-header .row-top .time
    margin-left: 0.711%;
    
  .page-header .row-top .time a
    font-size: 27px;
    line-height: 31px;
    
  .page-header .row-top .time a span
    width: 20px;
    height: 20px;
    
  .page-header .row-top .time a span .icon
    width: 20px;
    height: 20px;
    
  .page-header .row-top .info li:nth-child(3) a span
    background-size: 22px 22px;
    
@media(max-width 1530px)
  .page-header .row-bottom ul li a
    font-size: 16px;
    line-height: 20px;
    padding: 9px 2px;
    
  .page-header .row-bottom ul li a span
    top: -11px;
    
@media(max-width 1230px)
  .page-header
    padding-top: 65px;
    
  .page-header .row-top .logo .btn
    display block
    
  .page-header .row-top
    padding: 10px 0;
    margin-bottom: 0;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 9;
    
  .page-header .row-top .container
    justify-content: space-between;
    
  .page-header .row-top .logo
    order: 1;
    margin-right: 0;
    
  .page-header .row-top .info
    display: none;
    
  .page-header .row-top .basket
    order: 3;
    margin-left: 0;
    
  .page-header .row-top .time
    order: 2;
    margin-left: 0;
    
  .page-header .row-top .time p
    display: none;
    
  .page-header
    .row-bottom
      position: fixed;
      top: 0;
      left: 0;
      bottom: 0;
      right: 0;
      margin: auto;
      background-color: #fef6d2;
      z-index: 10;
      display: flex;
      flex-direction: column;
      .container
        margin: 0;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        nav
          flex-grow: 1;
          display: flex;
          flex-direction: column;
      &.close
        display none
          
  .page-header .row-bottom ul
    flex-grow: 1;
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
    
  .page-header .row-bottom ul li
    margin-right: 0;
    width: 50%;
    flex-grow: 0;
    
  .page-header .row-bottom .container .exit
    display block
    
