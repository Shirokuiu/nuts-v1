.tit
  margin-bottom 17px
  h1,
  h2
    font('Raleway', 38px, 700, #B35F49)
    
    text-align center
    &.red
      color #F44545
  .block
    margin-top 15px
  p
    font('Raleway', 18px, 400, #5D5D5D)
    
    margin-bottom 30px
    &:last-child
      margin-bottom 0
      
@media(max-width 480px)
  .tit h1, .tit h2
    font-size: 24px;
    line-height: 28px;
    
  .tit p
    font-size: 15px;
    line-height: 19px;
    margin-bottom: 10px;