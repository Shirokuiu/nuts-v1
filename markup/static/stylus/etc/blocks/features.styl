.features
  margin-bottom 35px
  
  border-top 1px solid #D0FDD6
  border-bottom 1px solid #D0FDD6
  ul
    reset-list()
    
    display flex
    justify-content space-between
    li
      position relative
      
      display flex
      flex-direction column
      align-items center
      width: 21.69%;
      padding-top 25px
      padding-bottom 30px
      
      cursor pointer
      &::after
        bgs(100%, 13px)
        bgi('features-hover-line.svg')
        
        content ''
        
        position absolute
        left 0
        right 0
        bottom 0
        
        transform translateY(5px)
        
        opacity 0
        
        transition 0.4s ease
      &::before
        center-absolute()
        
        content ''
        
        z-index -1
        
        height 0
        
        background-image linear-gradient(to top, rgba(#EFFCF1, 1), rgba(232, 253, 235, 0))
        
        opacity 0
        
        transition 0.2s all ease
      .headline
        margin-bottom 32px
        p
          font('Raleway', 32px, 700, #009F16)

          text-align center
      .img
        width 120px
        margin-top auto
        margin-bottom 50px
      .text
        font('Raleway', 18px, 400, #009F16)
        
        margin-top auto
        
        text-align center
      &:hover
        &::before
          height 100%
          
          opacity 1
        &::after
          transform translateY(0)
          
          opacity 1
          
@media(max-width 1290px)
  .features ul li .headline
    margin-bottom: 10px;
    
  .features ul li .headline p
    font-size: 21px;
    line-height: 26px;
    
  .features ul li .img
    width: 70px;
    margin-bottom: 10px;
    
  .features ul li .text
    font-size: 14px;
    line-height: 18px;
    
@media(max-width 880px)
  .features ul
    flex-wrap: wrap;
    
  .features ul li
    width: 100%;
    margin-bottom: 5px;
    &:last-child
      margin-bottom 0
          
          
          
          
          
          
          
          
          
          
          
        