.cart
  position relative
  
  box-sizing border-box
  padding: 20px 14px;
  
  border 2px solid #97FCA5
  border-radius 10px
  
  transition 0.2s ease
  &::before
    bgs(100%, 14px, #16BD2D)
    bgi('cart-hover.svg')
    
    content ''
    
    position absolute
    top -22px
    left 0
    right 0
    
    margin auto
    
    transform translateY(-5px)
    
    opacity 0
    
    transition 0.4s ease
  &:hover
    box-shadow: 0px 0px 7px 0px rgba(0,0,0,0.25);
    
    border-color transparent
    &::before
      transform translateY(0)
      
      opacity 1
  .cont
    .add
      reset-button()
      font('Raleway', 18px, 700, #FFFFFF)
      
      position relative
      
      width 100%
      padding 12px 5px
      
      text-align center
      
      background-color #16BD2D
      box-shadow: 0px 2px 5px 0px rgba(0,0,0,0.25);
      
      border-radius 50px
      span
        icon(20px, 20px, #97FCA5)
        
        position absolute
        top 0
        right 56px
        bottom 0
        
        margin auto
    .row-price
      display flex
      justify-content space-between
      align-items center
      margin-bottom 12px
      .current-price
        height 40px
        p
          reset()
          
          display flex
          align-items center
          .text
            font('Gotham Pro', 36px, 400, #F44545, true)
          .currency
            icon(15px, 26px, #F44545)
            
            margin-left 7px
        &.fix10000
          display: flex;
          align-items: center;
          p
            .text
              font-size: 23px;
              line-height: 27px;
            .currency
              width: 11px;
              height: 21px;
              .icon
                width: 11px;
                height: 21px;
        &.fix1000
          display: flex;
          align-items: center;
          p
            .text
              font-size: 26px;
              line-height: 30px;
            .currency
              width: 11px;
              height: 21px;
              .icon
                width: 11px;
                height: 21px;
      .old-price
        display flex
        align-items center
        margin-right 11px
        .text
          reset()
          
          position relative
          
          display flex
          align-items center
          &::before
            center-absolute()
            
            content ''
            
            left -12%
            
            width 120%
            height 2px
            
            background-color #999999
          .price
            font('Gotham Pro', 21px, 400, #999999, true)
          .currency
            icon(9px, 16px, #999999)
            
            margin-left 5px
        .status
          font('Raleway', 14px, 400, #5D5D5D)
          
          display flex
          align-items center
          margin-right 14px
          &::before
            content ''
            
            width 8px
            height 8px
            margin-right 5px
            
            background-color #2BF547
            
            border-radius 50%
    .row-calc
      display flex
      margin-bottom 20px
      .calc-wrap
        margin-left: 7.82%;
        h3
          font('Raleway', 16px, 400, #5D5D5D)
          
          margin-bottom 7px
          
          text-align center
        .calc
          display flex
          p
            font('Gotham Pro', 22px, 400, #16BD2D)
            
            width 40px
            
            text-align center
            line-height: 35px;
          button
            reset-button()
            
            position relative
            
            width 40px
            height 30px
            
            background-color #97FCA5
            
            border-radius 3px
            &::before,
            &::after
              center-absolute()
              
              content ''
              
              width 20px
              height 2px
              
              background-color #009F16
            &::before
              transform rotate(90deg)
            &.minus
              &::before
                display none
      .weight
        flex-grow 1
        width 20%
        h3
          font('Raleway', 16px, 400, #5D5D5D)
          
          margin-bottom 7px
          
          text-align center
        .weight-select
          position relative
          ul
            reset-list()
            
            position absolute
            left 0
            right 0
            z-index 1
            
            display none
            
            background-color #ffffff
            
            border 1px solid #97FCA5
            border-top none
            border-radius 0 0 3px 3px
            li
              font('Gotham Pro', 22px, 400, #16BD2D)
              
              padding: 2px 0;
              
              text-align center
              
              cursor pointer
              
              transition 0.2s ease
              &:last-child
                border-radius 0 0 3px 3px
              &:hover
                background-color #97FCA5
          p
            font('Gotham Pro', 22px, 400, #16BD2D)
            
            display flex
            justify-content space-between
            align-items center
            padding: 1px 9px;
            
            border 1px solid #97FCA5
            border-radius 3px
            
            cursor pointer
            &::before
              bgs(20px, 20px)
              bgi('kettlebell.svg')
              
              content ''
            &::after
              bgs(16px, 16px)
              bgi('down-arrow.svg')
              
              content ''
          &.open
            p
              border-bottom-color transparent
              border-radius 3px 3px 0 0
            ul
              display block
  .headline
    font('Raleway', 20px, 700, #B35F49, true)
    
    display block
    max-width: 247px;
    margin: 0 auto;
    
    text-align center
  .img
    position relative
    
    margin-bottom 34px
    img
      display block
    .item
      position absolute
      top 0
      right 0
      
      width 50px
      height 50px
      
      cursor pointer
      .icon
        bgs(50px, 50px)
      .text
        position absolute
        top -56px
        left 50%
        
        display block
        
        opacity 0

        transition 0.2s ease
        .arrow
          position absolute
          left 0
          right 0

          display block
          width 1px
          margin auto

          border: 15px solid transparent;
          border-top: 16px solid rgba(76,76,76,0.95);
        p
          font('Raleway', 14px, 500, #FFFFFF)
          
          box-sizing border-box
          min-width 108px
          padding 8px 14px

          background-color rgba(#4C4C4C, 0.95)

          border-radius 10px
          
          text-align center
      &:hover
        .text
          opacity 1
  &--sell
    .img
      .item
        .icon
          bgi('discount-cart.svg')
  &--new
    .img
      .item
        .icon
          bgi('new.svg')
  &--hit
    .img
      .item
        .icon
          bgi('gold-medal.svg')
  &--recomand
    &::before
      bgi('cart-hover-recomand.svg')
      
@media(max-width 674px)
  .cart::before
    display none
    
@media(max-width 480px)
  .cart .headline
    width: 100%;
    max-width: inherit;
    
@media(max-width 320px)
  .cart .cont .row-price .current-price.fix10000 p .text
    font-size: 21px;
    line-height: 25px;
          
          
          
          
          
          
          
          
          
          
          